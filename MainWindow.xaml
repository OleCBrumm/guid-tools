<Window x:Class="SitecoreIdConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sitecore ID Converter" Height="750" Width="1400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        FontFamily="Segoe UI"
        FontSize="14"
        Background="#1A1A1A"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <!-- Light Theme Colors (Default/Fallback) -->
        <SolidColorBrush x:Key="LightBackgroundBrush" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="LightCardBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="LightCardBorderBrush" Color="#E1E5E9"/>
        <SolidColorBrush x:Key="LightTextPrimaryBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="LightTextSecondaryBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="LightTextTertiaryBrush" Color="#64748B"/>
        <SolidColorBrush x:Key="LightInputBackgroundBrush" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="LightInputBorderBrush" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="LightResultBackgroundBrush" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="LightResultBorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="LightResultTextBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="LightResultLabelBrush" Color="#475569"/>
        <SolidColorBrush x:Key="LightStatusBackgroundBrush" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="LightStatusBorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="LightStatusTextBrush" Color="#64748B"/>
        
        <!-- Dark Theme Colors (Alternative) -->
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="DarkCardBackgroundBrush" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="DarkCardBorderBrush" Color="#404040"/>
        <SolidColorBrush x:Key="DarkTextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DarkTextSecondaryBrush" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="DarkTextTertiaryBrush" Color="#A0A0A0"/>
        <SolidColorBrush x:Key="DarkInputBackgroundBrush" Color="#3A3A3A"/>
        <SolidColorBrush x:Key="DarkInputBorderBrush" Color="#555555"/>
        <SolidColorBrush x:Key="DarkResultBackgroundBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="DarkResultBorderBrush" Color="#404040"/>
        <SolidColorBrush x:Key="DarkResultTextBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="DarkResultLabelBrush" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="DarkStatusBackgroundBrush" Color="#252525"/>
        <SolidColorBrush x:Key="DarkStatusBorderBrush" Color="#404040"/>
        <SolidColorBrush x:Key="DarkStatusTextBrush" Color="#A0A0A0"/>
        
        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Active Theme Resources (initialized with Light theme defaults) -->
        <!-- These will be updated by ThemeManager but must exist for initial DynamicResource binding -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#E1E5E9"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="TextTertiaryBrush" Color="#64748B"/>
        <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="InputBorderBrush" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="ResultBackgroundBrush" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="ResultBorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="ResultTextBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="ResultLabelBrush" Color="#475569"/>
        <SolidColorBrush x:Key="StatusBackgroundBrush" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="StatusBorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="StatusTextBrush" Color="#64748B"/>
    </Window.Resources>
    
    <Grid Margin="0" Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/> <!-- Custom Title Bar -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Title Bar -->
        <Border x:Name="TitleBar" Grid.Row="0" Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="0,0,0,1"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="ðŸ”§ Sitecore ID Converter" 
                           FontSize="14" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryBrush}" 
                           VerticalAlignment="Center" Margin="20,0,0,0"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ—•" Width="40" Height="30" FontSize="12"
                            Background="{DynamicResource CardBackgroundBrush}" 
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" 
                            Click="OnMinimize" Margin="0,0,2,0"/>
                    <Button Content="ðŸ—–" Width="40" Height="30" FontSize="12"
                            Background="{DynamicResource CardBackgroundBrush}" 
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" 
                            Click="OnMaximize" Margin="0,0,2,0"/>
                    <Button Content="âœ•" Width="40" Height="30" FontSize="12"
                            Background="{DynamicResource CardBackgroundBrush}" 
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" 
                            Click="OnClose"/>
                </StackPanel>
            </Grid>
        </Border>
        
        
        <!-- Header -->
        <Border Grid.Row="1" 
                Background="{DynamicResource CardBackgroundBrush}" 
                CornerRadius="12" 
                BorderBrush="{DynamicResource CardBorderBrush}" 
                BorderThickness="1" 
                Padding="20"
                Margin="30,20,30,24">
            <StackPanel>
                <TextBlock Text="ðŸ”§ Convert between different Sitecore ID formats" 
                           FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" 
                           HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Input Section -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8" 
                BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" 
                Padding="20" Margin="30,0,30,20">
            <StackPanel>
                <TextBlock Text="ðŸ“ Enter Sitecore ID" 
                           FontSize="16" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="InputTextBox" Grid.Column="0" Height="40" 
                             FontFamily="Consolas" FontSize="14"
                             TextChanged="InputTextBox_TextChanged"
                             Margin="0,0,12,0"
                             Padding="12,8"
                             BorderBrush="{DynamicResource InputBorderBrush}" BorderThickness="1"
                             Background="{DynamicResource InputBackgroundBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"                             
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"/>
                    
                    
                </Grid>
            </StackPanel>            
        </Border>

        <Border Grid.Row="3" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8" 
                BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" 
                Padding="20" Margin="30,0,30,20">
            <StackPanel>
            <Button Content="ðŸŽ² Generate New GUID" 
                            Height="40" Padding="12,0" FontSize="13"
                            FontWeight="SemiBold"
                            Background="{DynamicResource CardBackgroundBrush}" 
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1"
                            Click="OnGenerateGuid"/>
            </StackPanel>
        </Border>
        
        <!-- Results Section -->
        <Border Grid.Row="4" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8" 
                BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" 
                Padding="20" Margin="30,0,30,20">
            <StackPanel>
                <TextBlock Text="ðŸ“‹ Converted Formats" 
                           FontSize="16" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                
                <StackPanel>
                    <!-- Small Format -->
                    <Border Background="{DynamicResource ResultBackgroundBrush}" BorderBrush="{DynamicResource ResultBorderBrush}" BorderThickness="1" 
                            CornerRadius="6" Margin="0,0,0,8" Padding="16" Cursor="Hand"
                            MouseLeftButtonDown="OnCopySmall">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ðŸ”¹ Small:" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource ResultLabelBrush}" VerticalAlignment="Center" 
                                       Margin="0,0,16,0" FontSize="13"/>
                            <TextBlock x:Name="SmallTextBlock" Grid.Column="1" 
                                       FontFamily="Consolas" FontSize="14" 
                                       Foreground="{DynamicResource ResultTextBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Medium Format -->
                    <Border Background="{DynamicResource ResultBackgroundBrush}" BorderBrush="{DynamicResource ResultBorderBrush}" BorderThickness="1" 
                            CornerRadius="6" Margin="0,0,0,8" Padding="16" Cursor="Hand"
                            MouseLeftButtonDown="OnCopyMedium">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ðŸ”¸ Medium:" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource ResultLabelBrush}" VerticalAlignment="Center" 
                                       Margin="0,0,16,0" FontSize="13"/>
                            <TextBlock x:Name="MediumTextBlock" Grid.Column="1" 
                                       FontFamily="Consolas" FontSize="14" 
                                       Foreground="{DynamicResource ResultTextBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Large Format -->
                    <Border Background="{DynamicResource ResultBackgroundBrush}" BorderBrush="{DynamicResource ResultBorderBrush}" BorderThickness="1" 
                            CornerRadius="6" Margin="0,0,0,8" Padding="16" Cursor="Hand"
                            MouseLeftButtonDown="OnCopyLarge">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ðŸ”¹ Large:" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource ResultLabelBrush}" VerticalAlignment="Center" 
                                       Margin="0,0,16,0" FontSize="13"/>
                            <TextBlock x:Name="LargeTextBlock" Grid.Column="1" 
                                       FontFamily="Consolas" FontSize="14" 
                                       Foreground="{DynamicResource ResultTextBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Full Format -->
                    <Border Background="{DynamicResource ResultBackgroundBrush}" BorderBrush="{DynamicResource ResultBorderBrush}" BorderThickness="1" 
                            CornerRadius="6" Margin="0,0,0,0" Padding="16" Cursor="Hand"
                            MouseLeftButtonDown="OnCopyFull">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ðŸ”¸ Full:" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource ResultLabelBrush}" VerticalAlignment="Center" 
                                       Margin="0,0,16,0" FontSize="13"/>
                            <TextBlock x:Name="FullTextBlock" Grid.Column="1" 
                                       FontFamily="Consolas" FontSize="14" 
                                       Foreground="{DynamicResource ResultTextBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="5" Background="{DynamicResource StatusBackgroundBrush}" CornerRadius="6" 
                BorderBrush="{DynamicResource StatusBorderBrush}" BorderThickness="1" 
                Padding="12,8" Margin="30,0,30,30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusText" Grid.Column="0" 
                           Foreground="{DynamicResource StatusTextBrush}" FontSize="12" 
                           FontWeight="Medium" VerticalAlignment="Center"/>
                
                <StackPanel x:Name="ThemeSelector" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" >
                    <Button x:Name="DarkThemeButton" Content="ðŸŒ™" Width="34" Height="28" 
                            FontSize="14" Padding="0"
                            Background="{DynamicResource CardBackgroundBrush}" 
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            BorderBrush="{DynamicResource CardBorderBrush}" 
                            BorderThickness="1,1,0,1"
                            Click="OnSelectDarkTheme"
                            ToolTip="Dark Theme"/>
                    <Button x:Name="LightThemeButton" Content="â˜€ï¸" Width="34" Height="28" 
                            FontSize="14" Padding="0"
                            Background="{DynamicResource CardBackgroundBrush}" 
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            BorderBrush="{DynamicResource CardBorderBrush}" 
                            BorderThickness="1,1,0,1"
                            Click="OnSelectLightTheme"
                            ToolTip="Light Theme"/>
                    <Button x:Name="AutoThemeButton" Content="ðŸ”„" Width="34" Height="28" 
                            FontSize="14" Padding="0"
                            Background="{DynamicResource CardBackgroundBrush}" 
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            BorderBrush="{DynamicResource CardBorderBrush}" 
                            BorderThickness="1"
                            Click="OnSelectAutoTheme"
                            ToolTip="Auto (System Default)"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
